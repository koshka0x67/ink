# E-Paper Display Web Interface Configuration
# Copy this file to .env and modify as needed

# Display Settings
EPAPER_WIDTH=250
EPAPER_HEIGHT=122

# File Paths
EPAPER_CURRENT_IMAGE=/tmp/current_epaper.bmp
EPAPER_CURRENT_IMAGE_BASE=/tmp/current_epaper_base.bmp
EPAPER_SETTINGS_PATH=/tmp/epaper_settings.json
EPAPER_DASHBOARD_PREVIEW=/tmp/dashboard_preview.bmp
EPAPER_LOG_FILE=/tmp/epaper_display.log

# E-Paper Library Path
EPAPER_LIB_PATH=/home/pi/e-Paper/RaspberryPi_JetsonNano/python/lib

# Server Settings
EPAPER_HOST=0.0.0.0
EPAPER_PORT=5000
EPAPER_DEBUG=false
EPAPER_LOG_LEVEL=INFO

# Default Settings
EPAPER_DEFAULT_MODE=image
EPAPER_DEFAULT_CITY=San Francisco
EPAPER_DEFAULT_UNITS=c
EPAPER_DEFAULT_INTERVAL=300
EPAPER_SHOW_HUMIDITY=true
EPAPER_SHOW_WIND=true
EPAPER_SHOW_SUN=true
EPAPER_DEFAULT_ROTATION=90
EPAPER_FLIP_H=false
EPAPER_FLIP_V=false

# Weather API Settings
EPAPER_WEATHER_TIMEOUT=15
EPAPER_USER_AGENT=EpaperDashboard/1.0

# Font Settings
EPAPER_FONT_PATH_1=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf
EPAPER_FONT_PATH_2=/usr/share/fonts/truetype/freefont/FreeSans.ttf
EPAPER_FONT_LARGE_SIZE=28
EPAPER_FONT_MED_SIZE=14
EPAPER_FONT_SMALL_SIZE=12

# Security Settings
EPAPER_MAX_FILE_SIZE=10485760
EPAPER_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,bmp

# Performance Settings
EPAPER_CACHE_SIZE=5
EPAPER_THREAD_POOL_SIZE=4
